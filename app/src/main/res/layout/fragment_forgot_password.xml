<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/emailOtpEditTxt"
        android:layout_width="353dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Email OTP"
        android:inputType="numberSigned"
        android:maxLength="6"
        android:padding="18dp"
        android:paddingLeft="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/resendEmailOtpLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RESEND OTP"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/emailOtpEditTxt"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/emailOtpEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailOtpEditTxt" />

    <TextView
        android:id="@+id/emailOtpTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="30"
        android:textColor="#E83A3A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/emailOtpEditTxt"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="@+id/emailOtpEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailOtpEditTxt" />

    <EditText
        android:id="@+id/smsOtpEditTxt"
        android:layout_width="351dp"
        android:layout_height="70dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="SMS OTP"
        android:inputType="numberSigned"
        android:maxLength="6"
        android:padding="18dp"
        android:paddingLeft="18dp"
        app:layout_constraintEnd_toEndOf="@+id/emailOtpEditTxt"
        app:layout_constraintStart_toStartOf="@+id/emailOtpEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailOtpEditTxt" />

    <TextView
        android:id="@+id/resendSmsOtpLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RESEND OTP"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/smsOtpEditTxt"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="@+id/smsOtpEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/smsOtpEditTxt" />

    <TextView
        android:id="@+id/smsOtpTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="30"
        android:textColor="#E83A3A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/smsOtpEditTxt"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/smsOtpEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/smsOtpEditTxt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitOtpBtn"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="36dp"
        android:text="SUBMIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smsOtpEditTxt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="VERIFICATION"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>